<h2>User details</h2>

<dl class = "dl-horizontal"> 
  <dt><strong>Full name: </strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>Email: </strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user_stocks.count > 0 %>
  <h3>User stocks</h3>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead"> 
    This user is not following any stocks
  </p>
<% end %>

<%= link_to "Back", my_friends_path %>